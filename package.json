{
  "name": "oz-tutorial",
  "description": "Tutorial for using openzeppelin cli.",
  "version": "1.0.3",
  "author": "Ming-der Wang",
  "license": "MIT",
  "scripts": {
    "init": "npx oz init",
    "prepare": "npx oz link @openzeppelin/contracts-ethereum-package",
    "chain": "npx ganache-cli --deterministic",
    "deploy": "npx oz deploy",
    "new": "npx oz create",
    "accounts": "npx oz accounts",
    "read": "npx oz call",
    "write": "npx oz send-tx",
    "balance": "npx oz balance",
    "send": "npx oz transfer",
    "balance:erc20": "npx oz balance --erc20"
  },
  "devDependencies": {
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "dotenv": "^16.0.1",
    "truffle-hdwallet-provider": "^1.0.17"
  }
